    <!--Hourglass Styles-->
    
    <!--List View Item Style-->
    <Style TargetType="ListViewItem" x:Key="Hourglass">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Border x:Name="border"
                            CornerRadius="8" 
                            Margin="0,0,0,15"
                            Height="250"
                            MaxWidth="384">
                        <Border.Background>
                            <SolidColorBrush Color="#272727" x:Name="BorderBackground"/>
                        </Border.Background>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="{Binding Description}"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       Margin="15,15,0,0"
                                       Foreground="White"
                                       FontFamily="Inter"
                                       FontSize="12"/>

                            <ui:ProgressRing Margin="0,14,0,0" 
                                             Progress="{Binding Progress}"
                                             Width="150" 
                                             IsIndeterminate="False"
                                             BorderThickness="5"
                                             Height="150"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             RenderTransformOrigin="0.5,0.5"
                                             Foreground="{Binding ProgressRingColor}"
                                             Background="Transparent">
                                <ui:ProgressRing.RenderTransform>
                                    <TransformGroup>
                                        <RotateTransform Angle="-90"/>
                                        <ScaleTransform ScaleX="-1" />
                                    </TransformGroup>
                                </ui:ProgressRing.RenderTransform>
                            </ui:ProgressRing>

                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="20"
                                       Text="{Binding StrRemainingTime, StringFormat=N0}"
                                       Foreground="White"
                                       Margin="0,14,0,0"/>

                            <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,22">
                                <Button Margin="0,0,0,0" Style="{DynamicResource StartButton}" Command="{Binding StartCommand}"/>
                                <Button Margin="10,0,0,0" Style="{DynamicResource StopButton}" Command="{Binding StopCommand}"/>
                                <Button Margin="10,0,0,0" Style="{DynamicResource ResetButton}" Command="{Binding ResetCommand}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>

                        <EventTrigger RoutedEvent="Border.MouseEnter"
                                      SourceName="border">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="BorderBackground"
                                                    Storyboard.TargetProperty="Color"
                                                    From="#272727"
                                                    To="#292929"
                                                    Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <EventTrigger RoutedEvent="Border.MouseLeave"
                                      SourceName="border">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="BorderBackground"
                                                    Storyboard.TargetProperty="Color"
                                                    From="#292929"
                                                    To="#272727"
                                                    Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" TargetName="border" Value="#303030"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

